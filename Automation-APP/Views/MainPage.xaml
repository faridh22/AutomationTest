<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Automation_APP.ViewModels"
             xmlns:controls="clr-namespace:Automation_APP.Controls"
             x:Class="Automation_APP.Views.MainPage">
    <ContentPage.BindingContext>
        <viewModels:MainPageViewModel />
    </ContentPage.BindingContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <controls:HeaderView NotificationCount="{Binding Notifications}" Grid.Row="0" />
        <!-- Main page content here -->
    </Grid>
</ContentPage>
